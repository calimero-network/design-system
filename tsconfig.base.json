{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@calimero/icons": ["packages/icons/src"],
      "@calimero/ui": ["packages/ui/src"],
      "@calimero/tokens": ["packages/tokens/src"],
      "@calimero/charts": ["packages/charts/src"]
    }
  }
} 